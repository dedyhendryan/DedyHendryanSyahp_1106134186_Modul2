<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.tel.dedyhendryan.dedyhendryansyahputra_1106134186_modul2.TakeAway">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Identitas Pemesan:"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <EditText
        android:id="@+id/Msk_Nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:hint="Nama" />

    <EditText
        android:id="@+id/Msk_Nomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:hint="Nomor Telepon"
        android:inputType="number" />

    <EditText
        android:id="@+id/Msk_Alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:hint="Alamat" />

    <EditText
        android:id="@+id/Msk_Catatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="start"
        android:hint="Catatan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="CekMenu"
        android:text="Pilih Pesanan"
        android:textColor="@android:color/holo_red_dark" />

</LinearLayout>

